<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.albums.AlbumsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- iOS Style Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@color/background_primary">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/albums"
                    android:textAppearance="@style/TextAppearance.iOS18Photos.LargeTitle"
                    android:textColor="@color/label_primary" />

                <ImageButton
                    android:id="@+id/add_album_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ios_button_background"
                    android:contentDescription="@string/create_album"
                    android:src="@drawable/ic_add"
                    android:tint="@color/ios_blue" />

            </LinearLayout>

            <!-- My Albums Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_albums"
                        android:textAppearance="@style/TextAppearance.iOS18Photos.Title2"
                        android:textColor="@color/label_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textAppearance="@style/TextAppearance.iOS18Photos.Body"
                        android:textColor="@color/ios_blue"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_albums_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_album_ios" />

            </LinearLayout>

            <!-- Recent Albums Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/recents"
                    android:textAppearance="@style/TextAppearance.iOS18Photos.Title2"
                    android:textColor="@color/label_primary" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/background_secondary"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/recent_album_icon"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_folder_outline"
                            android:tint="@color/label_tertiary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="16dp"
                            android:text="@string/recents"
                            android:textAppearance="@style/TextAppearance.iOS18Photos.Body"
                            android:textColor="@color/label_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="16dp"
                            android:text="7"
                            android:textAppearance="@style/TextAppearance.iOS18Photos.Caption1"
                            android:textColor="@color/label_secondary" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Favorites Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/favorites"
                    android:textAppearance="@style/TextAppearance.iOS18Photos.Title2"
                    android:textColor="@color/label_primary" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="@color/background_secondary"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_heart_outline"
                            android:tint="@color/label_tertiary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="16dp"
                            android:text="@string/favorites"
                            android:textAppearance="@style/TextAppearance.iOS18Photos.Body"
                            android:textColor="@color/label_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="16dp"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.iOS18Photos.Caption1"
                            android:textColor="@color/label_secondary" />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>