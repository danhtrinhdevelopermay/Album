<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="160dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@color/background_secondary"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recent_day_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/background_tertiary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/gradient_overlay_bottom">

            <TextView
                android:id="@+id/recent_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar 15"
                android:textAppearance="@style/TextAppearance.iOS18Photos.Caption1"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>