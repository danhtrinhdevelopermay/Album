<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.iOS18Photos" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_tint_blue</item>
        <item name="colorOnPrimary">@color/background_primary</item>
        
        <item name="colorSecondary">@color/ios_blue</item>
        <item name="colorSecondaryVariant">@color/ios_tint_blue</item>
        <item name="colorOnSecondary">@color/background_primary</item>
        
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/label_primary</item>
        
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnSurface">@color/label_primary</item>
        
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/background_primary</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/tab_bar_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Typography (San Francisco-like font) -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.iOS18Photos.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.iOS18Photos.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.iOS18Photos.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.iOS18Photos.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.iOS18Photos.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.iOS18Photos.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.iOS18Photos.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.iOS18Photos.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.iOS18Photos.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.iOS18Photos.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.iOS18Photos.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.iOS18Photos.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.iOS18Photos.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.iOS18Photos.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.iOS18Photos.LabelSmall</item>
        
        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.iOS18Photos.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.iOS18Photos.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.iOS18Photos.LargeComponent</item>
    </style>
    
    <style name="Theme.iOS18Photos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.iOS18Photos.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.iOS18Photos.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.iOS18Photos.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.iOS18Photos.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.iOS18Photos.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.iOS18Photos.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.iOS18Photos.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/selection_overlay</item>
        <item name="elevation">0dp</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Widget.iOS18Photos.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="titleTextColor">@color/nav_bar_title</item>
        <item name="subtitleTextColor">@color/label_secondary</item>
        <item name="elevation">0dp</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.iOS18Photos.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/ios_blue</item>
        <item name="tint">@color/background_primary</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
</resources>